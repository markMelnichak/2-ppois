# =========================
# Doxyfile для Kitchen Project
# Положи этот файл в папку:
#   ~/Desktop/ppois/ppois_2
# =========================

# --- Общие настройки проекта ---

PROJECT_NAME           = "Kitchen Project"
PROJECT_NUMBER         =
PROJECT_BRIEF          = "Документация кода кухни"
OUTPUT_LANGUAGE        = Russian
DOXYFILE_ENCODING      = UTF-8

# --- Куда класть сгенерированную документацию ---

# Вся документация будет в папке docs
OUTPUT_DIRECTORY       = docs

# Нужен только HTML
GENERATE_HTML          = YES
HTML_OUTPUT            = html

# Никаких PDF/LaTeX и остальных форматов
GENERATE_LATEX         = NO
GENERATE_XML           = NO
GENERATE_RTF           = NO
GENERATE_MAN           = NO
GENERATE_DOCBOOK       = NO
GENERATE_AUTOGEN_DEF   = NO
GENERATE_SQLITE3       = NO
GENERATE_PERLMOD       = NO

# --- Что именно документировать ---

# Вытаскивать всю инфу из кода, даже без комментариев
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES

HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO

# --- Откуда брать исходники ---

# Папка, в которой лежат kitchen.hpp, kitchen.cpp, main.cpp
INPUT                  = ppois_2

# Какие файлы считать исходниками
FILE_PATTERNS          = *.hpp \
                         *.cpp

# Подпапки внутри ppois_2 не обходить (если вдруг появятся)
RECURSIVE              = NO

# Кодировка файлов
INPUT_ENCODING         = UTF-8

# --- Просмотр исходников в доке (по желанию) ---

SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
STRIP_CODE_COMMENTS    = NO

# --- Всякое визуальное (оставим по дефолту, но явно) ---

GENERATE_TREEVIEW      = YES
SEARCHENGINE           = YES
HTML_DYNAMIC_MENUS     = YES
HTML_CODE_FOLDING      = YES